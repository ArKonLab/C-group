<Window x:Class="WaitForIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaitForIt"
        mc:Ignorable="d"
		WindowStyle="None"
		ResizeMode="NoResize"
		WindowStartupLocation="CenterScreen"
		Background="DarkGray"
        Title="MainWindow" Height="670" Width="1120" KeyDown="Window_KeyDown">
    <Canvas x:Name="canvas">
        <Image Source="img/backGround.png" Height="519" Canvas.Left="186" Canvas.Top="64" Width="737"/>
        <Button x:Name="btnExit" Content="Выход" Canvas.Left="10" Canvas.Top="10" Width="131" Click="BtnExit_Click" Height="78" FontSize="36"/>
        <Button x:Name="btnSound" Content="Звук" Canvas.Left="979" Canvas.Top="212" Width="131" Height="78" FontSize="36" Click="BtnSound_Click"/>
        <Button x:Name="btnLeftTop" Content="&lt;&lt;" Canvas.Left="10" Canvas.Top="360" Width="131" Height="78" FontSize="36" Click="btnLeftTop_Click"/>
        <Button x:Name="btnLeftDown" Content="&lt;&lt;" Canvas.Left="10" Canvas.Top="548" Width="131" Height="78" FontSize="36" Click="btnLeftDown_Click"/>
        <Button x:Name="btnRightTop" Content="&gt;&gt;" Canvas.Left="979" Canvas.Top="360" Width="131" Height="78" FontSize="36" Click="btnRightTop_Click"/>
        <Button x:Name="btnRightDown" Content="&gt;&gt;" Canvas.Left="979" Canvas.Top="548" Width="131" Height="78" FontSize="36" Click="btnRightDown_Click"/>
        <Button x:Name="btnPlayA" Content="Игра А" Canvas.Left="979" Canvas.Top="10" Width="131" Height="78" FontSize="36" Click="BtnPlayA_Click"/>
        <Button x:Name="btnPlayB" Content="Игра Б" Canvas.Left="979" Canvas.Top="110" Width="131" Height="78" FontSize="36" Click="BtnPlayB_Click"/>
        <Label x:Name="score_label" Content="score" Canvas.Left="643" Canvas.Top="138" Height="50" Width="118" FontSize="36" FontWeight="Bold"/>
    </Canvas>
</Window>
